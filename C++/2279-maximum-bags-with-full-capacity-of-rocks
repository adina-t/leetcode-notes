```cpp
#import <algorithm>

using namespace std;

class Solution {
public:
    int maximumBags(vector<int>& capacity, vector<int>& rocks, int additionalRocks) {
        int n = capacity.size();
        int res = 0;

        for (int i = 0; i < n; i++) 
            capacity[i] -= rocks[i];
        
        sort (capacity.begin(), capacity.end());

        for (int i = 0; i < n; i++) {
            additionalRocks -= capacity[i];
            if (additionalRocks < 0) return i;
        }
        return n;
    }
};
```
